package Als;
import robocode.*;
import java.awt.Color;

/**
 * Als - a class by (Aleandro dos Santos)
 */
public class Als extends Robot  {
  public void run()  {
    setColors(Color.black,Color.lightGray,Color.red,Color.white,Color.green);
    while(true)  {
      ahead(350);
      turnRight(90);
      turnGunRight(360);
    }
  }
  //tank robô inimigo detectado
  public void onScannedRobot(ScannedRobotEvent e)  {
    String robotank = e.getName();
    double distancia = e.getDistance();
    System.out.println(robotank + " distância " + distancia);
    if (distancia < 100)  {
      fire(3);
    } else {
      fire(1);
    }
      
  }
  //colisão com a parede
  public void onHitWall(HitWallEvent e)  {
    back(50);
    turnRight(90);
  }
}
